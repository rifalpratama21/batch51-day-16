<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="shorcut icon" type="icon" href="/images/logoOP.jpg" />
    <title>Blog</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM"
      crossorigin="anonymous"
    />
    <style>
      @import
      url("https://fonts.googleapis.com/css2?family=Kelly+Slab&display=swap");
      .checkbox-custom { width: 20px; height: 20px;} .button-submit { color:
      black; font-weight: bold; color:;} .form-check-label { color: bisque; }
      .form-label { color: bisque; }
    </style>
    <link rel="stylesheet" href="/css/navbar.css" />
  </head>

  <body style="background-color: aquamarine">
    <nav
      id="navigation"
      class="navbar bg-color sticky-top navbar-inverse navbar-expand-lg shadow"
    >
      <div class="container">
        <a href="" class="me-4">
          <img src="/images/logoOP.jpg" alt="" />
        </a>
        <button
          class="navbar-toggler"
          type="button"
          data-bs-toggle="collapse"
          data-bs-target="#navbarToggle"
          aria-control="navbarToggler"
          aria-expanded="false"
          aria-label="Toggle navigation"
        >
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse nav-active-item" id="navbarToggle">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0">
            <li class="nav-item">
              <a
                class="nav-link fs-5 text-light"
                aria-current="page"
                href="/"
              >Home</a>
            </li>
            {{#if isLogin}}
              <li class="nav-item">
                <a
                  class="nav-link fs-5 text-light nav-active"
                  aria-current="page"
                  href="/blog"
                >Blog</a>
              </li>
            {{/if}}
            <li class="nav-item">
              <a
                class="nav-link fs-5 text-light"
                aria-current="page"
                href="/testimonial"
              >Testimonial</a>
            </li>
          </ul>

          <div class="d-flex justify-content-end me-3">
            <ul class="navbar-nav me-auto mb-2 ms-5 mb-lg-0">
              {{#if isLogin}}
                <li class="nav-item">
                  <a
                    class="nav-link text-danger active fw-semibold"
                    href="#"
                  >Hallo, {{user}}</a>
                </li>
                <li class="nav-item ms-3">
                  <a class="nav-link" href="/logout">Logout</a>
                </li>
              {{else}}
                <li class="nav-item">
                  <a class="nav-link" href="/register">Register</a>
                </li>
                <li class="nav-item ms-3">
                  <a
                    class="nav-link text-danger active fw-semibold"
                    href="/login"
                  >Login</a>
                </li>
              {{/if}}
            </ul>
          </div>

          <a
            class="buttom-contact-nav btn fs-6 fw-medium text-dark"
            href="/contact"
          >Contact Me</a>
        </div>
      </div>
    </nav>

    <!-- form content -->
    <section
      class="container my-4 p-4 p-sm-5 rounded-2"
      style="max-width: 600px; background-image: url(https://i.pinimg.com/originals/da/a1/19/daa119e2b37fd0af371641edf109da79.jpg);"
    >
      <h1
        class="text-center mb-4"
        style="font-family: Kelly Slab; letter-spacing: 2px; text-shadow: 0px 0px 2px rgb(255, 255, 255); color: rgb(255, 255, 255);"
      >
        Add My Project
      </h1>
      <form
        id="contactForm"
        method="post"
        action="/blog"
        enctype="multipart/form-data"
      >
        <div class="mb-3">
          <label for="tittle" class="form-label">Title</label>
          <input
            type="text"
            class="form-control"
            id="tittle"
            name="tittle"
            placeholder="Title"
          />
        </div>
        {{! <div class="mb-3">
          <label for="author" class="form-label">Author</label>
          <input
            type="text"
            class="form-control"
            id="author"
            name="author"
            placeholder="Author"
          />
        </div> }}
        <div
          class="mb-3 d-flex flex-column flex-sm-row justify-content-between gap-2"
        >
          <div class="w-100 mb-2 mb-sm-0">
            <label for="startDate" class="form-label">Start Date</label>
            <input
              type="date"
              class="form-control"
              id="startDate"
              name="startDate"
              {{!-- value="{{project.startDate}}" --}}
              {{! placeholder="Start Date" }}
            />
          </div>
          <div class="w-100">
            <label for="endDate" class="form-label">End Date</label>
            <input
              type="date"
              class="form-control"
              id="endDate"
              name="endDate"
              {{!-- value="{{project.endDate}}" --}}
              {{! placeholder="End Date" }}
            />
          </div>
        </div>
        <div class="mb-3">
          <label for="content" class="form-label">Description</label>
          <textarea
            class="form-control"
            id="content"
            rows="6"
            name="content"
            placeholder="content"
          ></textarea>
        </div>
        <div class="mb-3">
          <label
            class="label mb-1"
            for="technologies"
            style="color: bisque;"
          >Technologies</label>
          <div class="row">
            <div class="col-12 col-sm-3 mb-1 mb-sm-0">
              <div class="form-check d-flex align-items-center gap-2 fw-bold">
                <input
                  class="form-check-input checkbox-custom"
                  type="checkbox"
                  value="nodejs"
                  id="nodejs"
                  name="nodejs"
                />
                <label class="form-check-label mt-1" for="nodejs">
                  Node js
                </label>
              </div>
            </div>
            <div class="col-12 col-sm-3 mb-1 mb-sm-0">
              <div class="form-check d-flex align-items-center gap-2 fw-bold">
                <input
                  class="form-check-input checkbox-custom"
                  type="checkbox"
                  value="js"
                  id="js"
                  name="js"
                />
                <label class="form-check-label mt-1" for="js">
                  Javascript
                </label>
              </div>
            </div>
            <div class="col-12 col-sm-3 mb-1 mb-sm-0">
              <div class="form-check d-flex align-items-center gap-2">
                <input
                  class="form-check-input checkbox-custom"
                  type="checkbox"
                  value="react"
                  id="react"
                  name="react"
                />
                <label class="form-check-label mt-1 fw-bold" for="react">
                  React
                </label>
              </div>
            </div>
            <div class="col-12 col-sm-3 mb-1 mb-sm-0">
              <div class="form-check d-flex align-items-center gap-2">
                <input
                  class="form-check-input checkbox-custom"
                  type="checkbox"
                  value="vuejs"
                  id="vuejs"
                  name="vuejs"
                />
                <label class="form-check-label mt-1 fw-bold" for="vuejs">
                  Vue js
                </label>
              </div>
            </div>
          </div>
        </div>
        <div class="mb-3">
          <label for="image" class="form-label">Upload Image</label>
          <input
            type="file"
            class="form-control"
            id="uploadimage"
            name="image"
            placeholder="image"
          />
        </div>
        <div class="d-flex justify-content-end">
          <button type="submit" class="btn button-submit">Submit</button>
        </div>
      </form>
    </section>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
      crossorigin="anonymous"
    ></script>
    <script src="/js/navbar.js"></script>
  </body>
</html>